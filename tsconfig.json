{
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/config/database.js", "src/**/*", "models/index.js"],
    "exclude": [
        "node_modules", 
        "**/node_modules/*",
        "build/**/*",
        "dist/**/*",
        "**/tests/**/*",
        "**/*.test.ts",
        "**/*.spec.ts",
        "src/swipe-engine/tests",
        "src/swipe-engine/tests/**/*"
    ],
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "incremental": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "noEmitOnError": false,
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true, // Permite importar arquivos JSON
        "baseUrl": "./src", // Facilita os caminhos relativos
        "typeRoots": ["src/types", "node_modules/@types"],
        "types": ["node"],
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@libs/*": ["libs/*"],
            "@math/*": ["math/*"],
            "@errors/*": ["errors/*"],
            "@swipe-engine/*": ["swipe-engine/*"],
            "@pages/*": ["pages/*"]
        }
    }
}
